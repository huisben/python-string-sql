{
  "fileTypes": ["yaml", "yml"],
  "injectionSelector": "L:string.unquoted.block.yaml",
  "patterns": [
    {
      "begin": "\\s*((?:--|#)(?:sql|beginsql|begin-sql))",
      "end": "(?=^\\s*[\\w\"']+:)",
      "beginCaptures": {
        "1": {
          "name": "comment.line.double-dash.sql"
        }
      },
      "patterns": [
        {
          "include": "source.sql"
        }
      ]
    }
  ],
  "scopeName": "yaml-sql.injection"
}
